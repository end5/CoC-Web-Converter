{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "TS build",
            "type": "shell",
            "command": "tsc -p tsconfig.json",
            "problemMatcher": [
                "$tsc"
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent"
            }
        },
        {
            "label": "Parcel build",
            "type": "shell",
            "command": "parcel index.html",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}